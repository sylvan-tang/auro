#!/bin/bash
set -e

msg=$(git show-branch --no-name HEAD)
ROOT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && cd .. && pwd )"

cd "$ROOT_PATH/auro.wiki"
git diff --quiet origin/master
if [[ $? == 0 ]]; then
  git add .
  git commit --amend --no-edit
else
  git add .
  git commit -m "$msg" --no-edit
fi
cd $ROOT_PATH
